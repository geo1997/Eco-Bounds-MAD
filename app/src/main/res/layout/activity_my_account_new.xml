<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount_new"
    android:background="@drawable/gradient_background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="150dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/user_male_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/acc_name"
            android:layout_width="306dp"
            android:layout_height="37dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_name"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_image" />

        <TextView
            android:id="@+id/acc_email"
            android:layout_width="306dp"
            android:layout_height="37dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_email"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_name" />

        <TextView
            android:id="@+id/acc_curr_pass"
            android:layout_width="306dp"
            android:layout_height="37dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_current_pss"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_email" />

        <TextView
            android:id="@+id/acc_new_pass"
            android:layout_width="306dp"
            android:layout_height="37dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_new_pss"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_curr_pass" />

        <TextView
            android:id="@+id/acc_conf_new_pass"
            android:layout_width="306dp"
            android:layout_height="37dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_conf_new_pss"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_new_pass" />

        <Button
            android:id="@+id/update_accnt"
            android:layout_width="314dp"
            android:layout_height="54dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="53dp"
            android:text="@string/acc_update"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_conf_new_pass" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>